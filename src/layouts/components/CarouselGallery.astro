<script>
  // Function to initialize the carousel
  function initCarousel() {
    const carousel = document.getElementById("carousel");
    const prevBtn = document.querySelector(".nav-button.prev");
    const nextBtn = document.querySelector(".nav-button.next");
    const items = document.querySelectorAll(".carousel-item");

    if (!carousel || !prevBtn || !nextBtn || items.length === 0) return;

    const itemWidth = (items[0] as HTMLElement).offsetWidth + 32; // width + margin (mx-4 = 16px * 2)
    let currentPosition = 0;
    let isAnimating = false;
    let autoAnimationStopped = false;
    const totalImages = 20; // Número de imágenes seleccionadas

    // Función para mover el carrusel
    function moveCarousel(direction: "next" | "prev") {
      if (isAnimating || !carousel) return;
      isAnimating = true;

      // Stop automatic animation when using manual navigation
      if (!autoAnimationStopped) {
        carousel.style.animationPlayState = "paused";
        carousel.style.animation = "none";
        autoAnimationStopped = true;
      }

      if (direction === "next") {
        currentPosition -= itemWidth;
        // Si llega al final, vuelve al inicio
        if (Math.abs(currentPosition) >= itemWidth * totalImages) {
          currentPosition = 0;
        }
      } else {
        currentPosition += itemWidth;
        // If it reaches the beginning, go to the end
        if (currentPosition > 0) {
          currentPosition = -itemWidth * (totalImages - 1);
        }
      }

      carousel.style.transform = `translateX(${currentPosition}px)`;

      setTimeout(() => {
        isAnimating = false;
      }, 500);
    }

    // Función para reanudar animación automática
    function resumeAutoAnimation() {
      if (autoAnimationStopped || !carousel) return;
      setTimeout(() => {
        if (carousel && !autoAnimationStopped) {
          carousel.style.animation = "slide 60s linear infinite";
          carousel.style.animationPlayState = "running";
        }
      }, 3000);
    }

    // Event listeners for buttons
    let isButtonDisabled = false;

    prevBtn.addEventListener("click", () => {
      if (!isButtonDisabled) {
        isButtonDisabled = true;
        moveCarousel("prev");
        resumeAutoAnimation();
        setTimeout(() => (isButtonDisabled = false), 600);
      }
    });

    nextBtn.addEventListener("click", () => {
      if (!isButtonDisabled) {
        isButtonDisabled = true;
        moveCarousel("next");
        resumeAutoAnimation();
        setTimeout(() => (isButtonDisabled = false), 600);
      }
    });

    // Pausar animación automática al hacer hover
    const carouselWrapper = document.querySelector(".carousel-wrapper");
    if (carouselWrapper && carousel) {
      carouselWrapper.addEventListener("mouseenter", () => {
        if (!autoAnimationStopped) {
          carousel.style.animationPlayState = "paused";
        }
      });

      carouselWrapper.addEventListener("mouseleave", () => {
        if (!autoAnimationStopped) {
          carousel.style.animationPlayState = "running";
        }
      });
    }

    // Support for touch/swipe on mobile
    let startX = 0;
    let isDragging = false;

    carousel.addEventListener("touchstart", (e) => {
      startX = e.touches[0].clientX;
      isDragging = true;
      if (!autoAnimationStopped) {
        carousel.style.animationPlayState = "paused";
        carousel.style.animation = "none";
        autoAnimationStopped = true;
      }
    });

    carousel.addEventListener("touchmove", (e) => {
      if (!isDragging || !carousel) return;
      const currentX = e.touches[0].clientX;
      const diff = startX - currentX;

      const minSwipeDistance = 30;

      if (Math.abs(diff) > minSwipeDistance) {
        if (diff > 0) {
          moveCarousel("next");
        } else {
          moveCarousel("prev");
        }
        isDragging = false;
      } else if (Math.abs(diff) < 10) {
        isDragging = false;
      }
    });

    carousel.addEventListener("touchend", () => {
      isDragging = false;
      resumeAutoAnimation();
    });
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initCarousel);
  } else {
    initCarousel();
  }
</script>

<style>
  @keyframes slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-slide {
    animation: slide 60s linear infinite;
  }

  .carousel-container {
    transition: transform 0.5s ease;
  }

  .carousel-container:hover {
    animation-play-state: paused;
  }

  /* Navigation buttons */
  .nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(223, 109, 45, 0.9);
    color: white;
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    opacity: 0;
    font-size: 24px;
    font-weight: bold;
  }

  .carousel-wrapper:hover .nav-button {
    opacity: 1;
  }

  .nav-button:hover {
    background: rgba(223, 109, 45, 1);
    transform: translateY(-50%) scale(1.1);
  }

  .nav-button.prev {
    left: 20px;
  }

  .nav-button.next {
    right: 20px;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .carousel-container > div {
      max-width: 300px;
      height: 240px;
      margin: 0 12px;
    }

    .nav-button {
      width: 45px;
      height: 45px;
      font-size: 20px;
    }
  }

  @media (max-width: 480px) {
    .carousel-container > div {
      max-width: 250px;
      height: 200px;
      margin: 0 8px;
    }

    .nav-button {
      width: 40px;
      height: 40px;
      font-size: 18px;
    }
  }
</style>

---

<section class="py-8 bg-light dark:bg-darkmode-light">
  <div class="container">
    <h2 class="text-h4 text-center mb-6">Galería de Productos Regionales</h2>
    <div class="relative overflow-hidden">
      <div class="carousel-container flex animate-slide">
        {
          allImages.map((image, index) => (
            <div class="flex-shrink-0 w-64 h-48 mx-2">
              <ImageMod
                src={`/images/gallery/${image}`}
                alt={`Producto regional ${index + 1}`}
                width={256}
                height={192}
                class="w-full h-full object-cover rounded-lg shadow-md"
                format="webp"
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-slide {
    animation: slide 30s linear infinite;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .carousel-container > div {
      width: 200px;
      height: 150px;
      margin: 0 8px;
    }
  }

  @media (max-width: 480px) {
    .carousel-container > div {
      width: 150px;
      height: 112px;
      margin: 0 4px;
    }
  }
</style>

---
import Logo from "@/components/Logo.astro";
import Social from "@/components/Social.astro";
import menu from "@/config/menu.json";
import social from "@/config/social.json";

const { footer }: { footer: { name: string; url: string }[] } = menu;
const currentYear = new Date().getFullYear();
const copyrightText = `© 2023 - ${currentYear} Mercado Regional. Derechos Reservados.`;
---

<footer class="bg-light dark:bg-darkmode-light">
  <div class="container">
    <!-- Primera fila: 3 columnas -->
    <div class="row py-6 lg:py-10">
      <!-- Columna 1: Logo -->
      <div class="lg:col-3">
        <Logo />
      </div>

      <!-- Columna 2: Título + Páginas verticales -->
      <div class="lg:col-6">
        <h3 class="text-h5 mb-2 text-text-dark dark:text-darkmode-text-dark">
          Enlaces
        </h3>
        <div class="flex justify-center mb-2 lg:mb-4">
          <hr class="border-border dark:border-darkmode-border w-full" />
        </div>
        <ul class="flex flex-col space-y-2 mb-2 lg:mb-4">
          {
            footer.map((menu) => (
              <li>
                <a
                  href={menu.url}
                  class="text-text dark:text-darkmode-text hover:text-primary transition-colors"
                >
                  {menu.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Columna 3: Horario -->
      <div class="lg:col-3">
        <h3 class="text-h5 mb-2 text-text-dark dark:text-darkmode-text-dark">
          Horario de Atención
        </h3>
        <div class="flex justify-center mb-2 lg:mb-4">
          <hr class="border-border dark:border-darkmode-border w-full" />
        </div>
        <div class="text-text dark:text-darkmode-text mb-2 lg:mb-4">
          <p class="mb-1"><strong>Lunes:</strong> 7:00 - 21:00 hrs</p>
          <p class="mb-1"><strong>Martes:</strong> 7:00 - 21:00 hrs</p>
          <p class="mb-1"><strong>Miércoles:</strong> 7:00 - 21:00 hrs</p>
          <p class="mb-1"><strong>Jueves:</strong> 7:00 - 21:00 hrs</p>
          <p class="mb-1"><strong>Viernes:</strong> 7:00 - 21:00 hrs</p>
          <p class="mb-1"><strong>Sábado:</strong> 7:00 - 21:00 hrs</p>
          <p class="mb-1"><strong>Domingo:</strong> 7:00 - 21:00 hrs</p>
        </div>
      </div>
    </div>

    <!-- Segunda fila: 3 columnas -->
    <div class="row pb-6 lg:pb-10">
      <!-- Columna 1: Redes sociales -->
      <div class="lg:col-4">
        <h3 class="text-h5 mb-2 text-text-dark dark:text-darkmode-text-dark">
          Síguenos en Redes Sociales
        </h3>
        <div class="flex justify-center mb-2 lg:mb-4">
          <hr class="border-border dark:border-darkmode-border w-full" />
        </div>
        <div class="mb-2 lg:mb-4 flex justify-center">
          <Social
            source={social.main}
            className="social-icons justify-center"
          />
        </div>
      </div>

      <!-- Columna 2: Desarrollado por Aniwa -->

---
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry, render } from "astro:content";
import {
  FaAppleAlt,
  FaCheck,
  FaCheese,
  FaDrumstickBite,
  FaLeaf,
  FaPalette,
  FaStar,
} from "react-icons/fa";

const productos = (await getEntry(
  "productos",
  "-index",
)) as CollectionEntry<"productos">;
const { Content } = await render(productos);
const { title, description, meta_title, image } = productos.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <PageHeader title={title} />
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          {
            image && (
              <ImageMod
                class="mx-auto mb-6 rounded-lg"
                src={image}
                width={600}
                height={400}
                alt={title}
                format="webp"
              />
            )
          }
          <div class="content">
            <Content />
          </div>
          <!-- Sección Combinada: Categorías de Productos con Productos Destacados -->
          <div class="mt-8">
            <h2 class="mb-6 text-h4">
              Categorías de Productos con Productos Destacados de la Región
            </h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              <!-- Frutas y Verduras -->
              <div class="bg-light dark:bg-darkmode-light p-6 rounded-lg">
                <div class="text-center mb-4">
                  <FaAppleAlt className="text-4xl text-primary mx-auto mb-2" />
                  <h3 class="text-h5">Frutas y Verduras</h3>
                </div>
                <p class="text-muted mb-4 text-center">
                  Productos frescos de temporada cultivados por agricultores
                  locales.
                </p>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Manzanas frescas de la región manzanera más productiva</span
                    >
                  </li>
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Verduras orgánicas de huertos locales</span
                    >
                  </li>
                </ul>
              </div>

              <!-- Lácteos -->
              <div class="bg-light dark:bg-darkmode-light p-6 rounded-lg">
                <div class="text-center mb-4">
                  <FaCheese className="text-4xl text-primary mx-auto mb-2" />
                  <h3 class="text-h5">Lácteos</h3>
                </div>
                <p class="text-muted mb-4 text-center">
                  Quesos y lácteos artesanales de productores tradicionales.
                </p>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Quesos y lácteos de productores locales</span
                    >
                  </li>
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Yogurt natural y productos lácteos frescos</span
                    >
                  </li>
                </ul>
              </div>

              <!-- Artesanías -->
              <div class="bg-light dark:bg-darkmode-light p-6 rounded-lg">
                <div class="text-center mb-4">
                  <FaPalette className="text-4xl text-primary mx-auto mb-2" />
                  <h3 class="text-h5">Artesanías</h3>
                </div>
                <p class="text-muted mb-4 text-center">
                  Artesanías tradicionales de la cultura rarámuri y regional.
                </p>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm">Artesanías rarámuris auténticas</span>
                  </li>
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Productos textiles y cerámicos tradicionales</span
                    >
                  </li>
                </ul>
              </div>

              <!-- Productos de Temporada -->
              <div class="bg-light dark:bg-darkmode-light p-6 rounded-lg">
                <div class="text-center mb-4">
                  <FaLeaf className="text-4xl text-primary mx-auto mb-2" />
                  <h3 class="text-h5">Productos de Temporada</h3>
                </div>
                <p class="text-muted mb-4 text-center">
                  Productos estacionales frescos y de calidad excepcional.
                </p>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Nueces, miel y productos de temporada</span
                    >
                  </li>
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Frutas cítricas y berries de temporada</span
                    >
                  </li>
                </ul>
              </div>

              <!-- Carnes y Embutidos -->
              <div class="bg-light dark:bg-darkmode-light p-6 rounded-lg">
                <div class="text-center mb-4">
                  <FaDrumstickBite
                    className="text-4xl text-primary mx-auto mb-2"
                  />
                  <h3 class="text-h5">Carnes y Embutidos</h3>
                </div>
                <p class="text-muted mb-4 text-center">
                  Carnes y embutidos tradicionales preparados con métodos
                  artesanales.
                </p>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Embutidos y carnes secas tradicionales</span
                    >
                  </li>
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Carnes frescas de ganadería local</span
                    >
                  </li>
                </ul>
              </div>

              <!-- Productos Selectos -->
              <div class="bg-light dark:bg-darkmode-light p-6 rounded-lg">
                <div class="text-center mb-4">
                  <FaStar className="text-4xl text-primary mx-auto mb-2" />
                  <h3 class="text-h5">Productos Selectos</h3>
                </div>
                <p class="text-muted mb-4 text-center">
                  Selección especial de productos premium de toda la región.
                </p>
                <ul class="space-y-2">
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Productos selectos de toda la región chihuahuense</span
                    >
                  </li>
                  <li class="flex items-start">
                    <FaCheck
                      className="mr-2 mt-0.5 text-primary flex-shrink-0"
                    />
                    <span class="text-sm"
                      >Especialidades gourmet y productos únicos</span
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <!-- /Sección Combinada: Categorías de Productos con Productos Destacados -->
        </div>
      </div>
    </div>
  </section>
</Base>
